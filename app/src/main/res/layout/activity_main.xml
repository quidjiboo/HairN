<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.akov.hairn.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:text="LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="login_action" />

    <Button
        android:text="LOGOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button3"
        android:onClick="login_out" />

    <Button
        android:text="Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:onClick="curent_user_action"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="test_choose_day"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="New Shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:onClick="new_shop"
        android:layout_alignEnd="@+id/button5"
        android:id="@+id/button7" />

    <Button
        android:text="New days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="new_test_workdays"
        android:id="@+id/button6"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:text="all_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:id="@+id/button8"
        android:onClick="all_days"/>

    <Button
        android:text="creat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:onClick="creat_user"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/log_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button8"
        android:layout_alignStart="@+id/button5"
        android:id="@+id/logTokenButton" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logTokenButton"
        android:layout_alignParentStart="true"
        android:id="@+id/button10"
        android:onClick="Confirm_order" />

    <Button
        android:text="add_Nady_barbeshop_text_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:onClick="add_Nady_barbeshop_text_first"
        android:layout_above="@+id/button8"
        android:layout_toEndOf="@+id/button10" />

    <Button
    android:text="add_defaults"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button11"
    android:onClick="add_defaults"
        android:layout_above="@+id/button10"
        android:layout_toStartOf="@+id/button7" />



    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button13"
        android:layout_toEndOf="@+id/button7"
        android:id="@+id/button16"
        android:onClick="add_list_view_test"/>

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button16"
        android:layout_marginTop="27dp"
        android:onClick="newLive"
        android:text="NEwLive" />
</RelativeLayout>
